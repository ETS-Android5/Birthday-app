<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rView"
    android:background="@drawable/blackbackground">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text=" Click on the photo to find out the mystery!!! "
        android:textColor="#F2F8F2"
        android:textColorHighlight="#EAF6F3"
        android:textSize="25sp" />

    <Button
        android:id="@+id/push"
        android:layout_width="210dp"
        android:layout_height="180dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/panda_state"

        />
    <Button
        android:id="@+id/faari"
        android:layout_width="570dp"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/butn_second"

        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="80dp"
        android:text=" . "
        android:textColor="#673AB7"

        android:textSize="25sp" />

</RelativeLayout>